    <SignAssembly>false</SignAssembly>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Microsoft.Identity.Web.Analyzers\Microsoft.Identity.Web.Analyzers.csproj" />
  </ItemGroup>

  <ItemGroup>
